<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akin_.letseventapplication.EventDescriptionActivity">
    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12sp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeDes">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="225sp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:gravity="right">
                <Button
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="Attend"
                    android:background="#E8EAF6"
                    android:onClick="attendPressed"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="165sp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#80000000">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:paddingTop="0sp"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35sp"
                        android:id="@+id/dEventNameLabel" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="85sp"
                        android:layout_height="25sp"
                        android:src="@mipmap/ic_date_dsc"/>
                    <TextView
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/dEventDateLabel"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line1"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="85sp"
                        android:layout_height="30sp"
                        android:src="@mipmap/ic_map_dsc"/>
                    <TextView
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:id="@+id/dEventLocationLabel"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line2"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="85sp"
                        android:layout_height="25sp"
                        android:src="@mipmap/ic_desc_dsc"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/dEventDescriptionLabel" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line3"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="85sp"
                        android:layout_height="25sp"
                        android:src="@mipmap/ic_creator_dsc"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/dEventCreatorLabel" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line4"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="85sp"
                        android:layout_height="25sp"
                        android:src="@mipmap/ic_type_dsc"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:id="@+id/dEventTypeLabel"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line5"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="275sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/commentBox"
                        android:hint="Comment here"/>
                    <Button
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:text="Comment"
                        android:onClick="commentPressed"
                        android:id="@+id/buttonComment" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments :"
                        android:id="@+id/info3" />
                </LinearLayout>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView2"
                    tools:listitem="@layout/listviewcomment_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
