<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.akin_.letseventapplication.EventDescriptionActivity">
    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12sp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeDes">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="225sp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:gravity="right">
                <Button
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="Attend"
                    android:onClick="attendPressed"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginTop="165sp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#80000000">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:paddingTop="0sp"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="35sp"
                        android:id="@+id/dEventNameLabel" />
                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/dEventDateLabel"
                android:layout_below="@+id/imageView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:id="@+id/dEventLocationLabel"
                android:layout_below="@+id/dEventDateLabel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/dEventDescriptionLabel"
                android:layout_below="@+id/dEventLocationLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:layout_below="@+id/dEventDescriptionLabel"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="15sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/dEventCreatorLabel"
                android:layout_below="@+id/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp"
                android:id="@+id/dEventTypeLabel"
                android:layout_below="@+id/dEventCreatorLabel"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/linenext"
                android:layout_below="@+id/dEventTypeLabel"
                android:background="@android:color/darker_gray"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:id="@+id/buttonComment"
                android:onClick="commentPressed"
                android:layout_below="@+id/linenext"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/commentBox"
                android:hint="Comment here"
                android:layout_below="@+id/linenext"
                android:layout_toLeftOf="@+id/buttonComment"
                android:layout_toStartOf="@+id/buttonComment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments :"
                    android:id="@+id/info3"
                    android:layout_below="@+id/commentBox"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        tools:listitem="@layout/listviewcomment_layout"
        android:layout_below="@+id/svScroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
